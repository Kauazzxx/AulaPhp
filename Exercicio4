<?php
// Cria um array associativo onde as chaves são os nomes dos alunos e os valores são suas notas
$alunos = [
  "João" => 8.5,
  "Maria" => 9.2,
  "Pedro" => 7.8
];

// Exibe o resultado no console
echo "Notas dos alunos:\n";
foreach ($alunos as $nome => $nota) {
  echo "Aluno: " . $nome . ", Nota: " . $nota . "\n";
}

echo "\nOutra forma de exibir usando print_r():\n";
print_r($alunos);
?>
